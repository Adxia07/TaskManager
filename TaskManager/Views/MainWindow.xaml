<Window x:Class="TaskManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:vm="clr-namespace:TaskManager.ViewModels"
        xmlns:converters="clr-namespace:TaskManager.Converters"
        Title="Task Manager" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        FontFamily="Segoe UI"
        Foreground="White">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Конвертеры -->
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:CoreIndexConverter x:Key="CoreIndexConverter"/>

        <!-- Стили для DataGrid -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E3E"/>
            <Setter Property="RowBackground" Value="#2D2D2D"/>
            <Setter Property="AlternatingRowBackground" Value="#252525"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="ScrollViewer.PanningMode" Value="Both"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Visible"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Стиль для заголовков колонок DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#3E3E3E"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для ячеек DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Стиль для Button -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#00407A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки справки -->
        <Style x:Key="HelpButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для TreeView -->
        <Style x:Key="ModernTreeViewStyle" TargetType="TreeView">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#3E3E3E"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Стиль для элементов TreeView -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White"/>
            </Style.Resources>
        </Style>

        <!-- Стиль для CheckBox -->
        <Style x:Key="CoreCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,10,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с кнопкой справки -->
        <Border Grid.Row="0" 
                Background="#2D2D2D" 
                CornerRadius="3" 
                Margin="0,0,0,10"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок по центру -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Диспетчер задач" FontSize="20" FontWeight="Bold"/>
                </StackPanel>

                <!-- Кнопка справки справа -->
                <Button Grid.Column="1" 
                        Content="Справка" 
                        Style="{StaticResource HelpButtonStyle}"
                        Command="{Binding ShowHelpCommand}"
                        ToolTip="Показать справку по программе"/>
            </Grid>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Row="1" 
                Background="#2D2D2D" 
                CornerRadius="3" 
                Margin="0,0,0,10"
                Padding="10">
            <WrapPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBox Width="250" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             VerticalContentAlignment="Center"
                             ToolTip="Введите имя процесса для поиска"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Интервал:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Width="80" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="{Binding RefreshInterval, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Интервал обновления в миллисекундах"/>
                    <TextBlock Text="мс" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Основная область -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>

            <!-- Таблица процессов -->
            <Border Grid.Column="0" 
                    Background="#2D2D2D" 
                    CornerRadius="3" 
                    Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#3E3E3E"
                            CornerRadius="3,3,0,0"
                            Padding="5">
                        <TextBlock Text="Список процессов" FontWeight="Bold" Foreground="White"/>
                    </Border>

                    <DataGrid Grid.Row="1"
                              Style="{StaticResource ModernDataGridStyle}"
                              ItemsSource="{Binding Processes}"
                              SelectedItem="{Binding SelectedProcess}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Имя процесса" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Потоки" Binding="{Binding ThreadCount}" Width="Auto"/>
                            <DataGridTextColumn Header="Память (МБ)" Binding="{Binding MemoryUsage, StringFormat={}{0:N0}}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Дерево процессов -->
            <Border Grid.Column="1" 
                    Background="#2D2D2D" 
                    CornerRadius="3" 
                    Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#3E3E3E"
                            CornerRadius="3,3,0,0"
                            Padding="5">
                        <TextBlock Text="Дерево процессов" FontWeight="Bold" Foreground="White"/>
                    </Border>

                    <TreeView Grid.Row="1" 
                              Style="{StaticResource ModernTreeViewStyle}"
                              ItemsSource="{Binding ProcessTree}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Process.Name}" 
                                           Foreground="White"
                                           ToolTip="{Binding Process.Id, StringFormat=ID: {0}}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Правая панель-->
            <Border Grid.Column="2" 
                    Background="#2D2D2D" 
                    CornerRadius="3" 
                    Margin="5,0,0,0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- CPU график -->
                    <Border Grid.Row="0" 
                            Background="#3E3E3E" 
                            CornerRadius="3" 
                            Margin="0,0,0,10">
                        <StackPanel>
                            <Border Background="#3E3E3E"
                                    CornerRadius="3,3,0,0" 
                                    Padding="5">
                                <TextBlock Text="Загрузка CPU" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding CpuValue, StringFormat=Текущая загрузка: {0}%, Converter={StaticResource PercentageConverter}}" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="#007ACC"
                                           HorizontalAlignment="Center"
                                           Margin="0,5"/>
                                <lvc:CartesianChart Series="{Binding CpuSeries}" 
                                                   Height="120"
                                                   LegendLocation="None"
                                                   Background="#2D2D2D">
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis LabelFormatter="{Binding Converter={StaticResource PercentageConverter}}"
                                                 Foreground="White"/>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- CPU Affinity -->
                    <Border Grid.Row="1" 
                            Background="#3E3E3E" 
                            CornerRadius="3" 
                            Margin="0,0,0,10">
                        <StackPanel>
                            <Border Background="#3E3E3E"
                                    CornerRadius="3,3,0,0" 
                                    Padding="5">
                                <TextBlock Text="CPU Affinity" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <StackPanel Margin="5">
                                <TextBlock Text="Выберите ядра для процесса:" 
                                           Margin="0,0,0,5" 
                                           FontSize="12" 
                                           Foreground="#CCCCCC"/>
                                <ItemsControl ItemsSource="{Binding SelectedCores}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Path=., Mode=TwoWay}"
                                                      Style="{StaticResource CoreCheckBoxStyle}">
                                                <TextBlock Text="{Binding Path=., Converter={StaticResource CoreIndexConverter}}"
                                                           Foreground="White"/>
                                            </CheckBox>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button Content="Применить affinity"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Margin="0,5,0,0"
                                        Command="{Binding ApplyAffinityCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Потоки процесса -->
                    <Border Grid.Row="2" 
                            Background="#3E3E3E" 
                            CornerRadius="3">
                        <StackPanel>
                            <Border Background="#3E3E3E"
                                    CornerRadius="3,3,0,0" 
                                    Padding="5">
                                <TextBlock Text="Потоки процесса" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <ListBox ItemsSource="{Binding Threads}"
                                     Background="#2D2D2D"
                                     BorderBrush="#3E3E3E"
                                     Foreground="White"
                                     Height="150"
                                     Margin="5"
                                     ScrollViewer.VerticalScrollBarVisibility="Visible"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Нижняя панель с приоритетами -->
        <Border Grid.Row="3" 
                Background="#2D2D2D" 
                CornerRadius="3" 
                Margin="0,10,0,0"
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Приоритет:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold" Foreground="White"/>
                <Button Content="High" Style="{StaticResource ModernButtonStyle}" Click="High_Click" Margin="0,0,5,0"/>
                <Button Content="Normal" Style="{StaticResource ModernButtonStyle}" Click="Normal_Click" Margin="0,0,5,0"/>
                <Button Content="RealTime" Style="{StaticResource ModernButtonStyle}" Background="#DC3545" Click="Realtime_Click" Margin="0,0,5,0"/>
                <Button Content="Одно ядро" Style="{StaticResource ModernButtonStyle}" Background="#6C757D" Click="Affinity_Click" Margin="0,0,5,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>